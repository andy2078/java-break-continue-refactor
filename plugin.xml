<?xml version="1.0" encoding="UTF-8"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.plugin.refactor.modifyCommand"
            name="Apply Flow"/>
            categoryId="org.eclipse.ui.category.edit"/>            
   </extension>

   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="org.plugin.refactor.modifyCommand"
            class="org.plugin.refactor.flow.RefactorHandler">
      </handler>
   </extension>

   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
         	locationURI="menu:org.eclipse.ui.main.menu?after=additions">
      		<menu
            	label="Refactor Break/Continue"
            	id="org.plugin.refactor.menu">
        		<command
               		commandId="org.plugin.refactor.modifyCommand"
               		label="Apply"
               		style="push"
               		tooltip="Convert">
         		</command>
      		</menu>
      </menuContribution>
   </extension>
</plugin>
